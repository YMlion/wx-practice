/**index.wxss**/

.weui-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: white;
}

.weui-flex__item {
  flex: 1;
  text-align: center;
}

.item-main {
  width: 95%;
  margin: 5px;
}
.cover-dialog {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.66);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  position: fixed;
  z-index: 100;
  align-items: center;
  justify-content: center;
}
.swiper {
  width: 700rpx;
  height: 1000rpx;
}

.cover-image {
  /* margin-top: 30px; */
  /* max-width: 100%; */
  width: 700rpx;
  max-height: 2000rpx;
  align-self: center;
}
.cover-buttons {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  flex: 1;
  text-align: center;
  justify-content: center;
}
.cover-text {
  background-color: #35AEFE;
  font-size: 14px;
  border-radius: 3px;
  color: white;
  width: 8em;
  height: 2.5em;
  margin: 5px;
}

<view class="cover-dialog" catchtap='cancelDialog' wx:if='{{ showLarge }}'>
  <view>
    <view class="weui-flex__item">
      <image class='cover-image' mode='widthFix' src="{{ largeImageUrl }}"></image>
    </view>
    <view class="cover-buttons">
      <button class="cover-text" catchtap='saveImage' data-url="{{ largeImageUrl }}">保存到本地</button>
      <button class="cover-text" open-type='share'>分享</button>
    </view>
  </view>
</view>

<view class="page">
  <view class="page__bd page__bd_spacing">
    <view class="weui-flex">
      <view class="weui-flex__item">
        <image class='item-main' mode='widthFix' bindtap='imageTap' bindlongpress='showLargePicture' wx:for='{{ imagesLeft }}' wx:for-item="imgData" wx:key='imgData._id' data-item='{{imgData}}' src='{{imgData.url}}'></image>
      </view>
      <view class="weui-flex__item">
        <image class='item-main' mode='widthFix' bindtap='imageTap' bindlongpress='showLargePicture' wx:for='{{ imagesRight }}' wx:for-item="imgData" wx:key='imgData._id' data-item='{{imgData}}' src='{{imgData.url}}'></image>
      </view>
    </view>
  </view>
</view>